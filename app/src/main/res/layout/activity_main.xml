                android:id="@+id/tv_2_3"
                style="@style/box_tv"/>
            <TextView
                android:id="@+id/tv_2_4"
                style="@style/box_tv"/>
        </LinearLayout>
        <LinearLayout
            style="@style/row_ll">
            <TextView
                android:id="@+id/tv_3_1"
                style="@style/box_tv"/>
            <TextView
                android:id="@+id/tv_3_2"
                style="@style/box_tv"/>
